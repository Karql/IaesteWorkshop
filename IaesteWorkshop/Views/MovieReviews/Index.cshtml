            @Html.DisplayNameFor(model => model.Movie.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReviewerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReviewerEmail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Review)
        </th>
